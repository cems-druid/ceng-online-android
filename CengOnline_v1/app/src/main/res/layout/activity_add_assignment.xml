<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".AssignmentMVVM.AddEditAssignmentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_assignment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <EditText
        android:id="@+id/assignment_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment name"
        android:inputType="text" />
    <EditText
        android:id="@+id/assignment_nameofcourse_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment's course"
        android:inputType="text"/>

    <EditText
        android:id="@+id/assignment_duedate_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Due date"
        android:inputType="date"/>

    <EditText
        android:id="@+id/assignment_homework_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Homework"
        android:inputType="textMultiLine"/>


</LinearLayout>